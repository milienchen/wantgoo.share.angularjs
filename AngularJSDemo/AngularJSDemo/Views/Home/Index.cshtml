@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Index</title>
    <style>
        table, th, td { border: 1px solid black; }
    </style>
    <script src="~/js/angular.min.js"></script>
    <script src="~/js/home/indexApp.js"></script>
    <script src="~/js/home/indexController.js"></script>
    <script src="~/js/htmlFilters.js"></script>
</head>
<body ng-app="indexApp" ng-controller="indexController as indexCtrl">
<span ng-bind="indexCtrl.firstName"></span>, <span ng-bind="indexCtrl.lastName"></span>
<br/>
<span ng-bind="indexCtrl.fullName()"></span>
<div>
    <input type="text" ng-model="indexCtrl.firstName"/>
    <input type="text" ng-model="indexCtrl.lastName"/>
</div>
<input type="button" value="按下去" ng-click="indexCtrl.showFullName()"/>
<table>
    <thead>
    <tr>
        <th>姓</th>
        <th>名</th>
        <th style="cursor: pointer;" ng-click="indexCtrl.reverse = !indexCtrl.reverse">年齡</th>
    </tr>
    </thead>
    <tbody>
    <tr ng-repeat="user in indexCtrl.users | orderBy:'age':indexCtrl.reverse">
        <td ng-bind="user.lastName"></td>
        <td ng-bind="user.firstName"></td>
        <td ng-bind="user.age | number:2"></td>
    </tr>
    </tbody>
</table>
<input type="button" value="加一點人" ng-click="indexCtrl.getMoreUsers()"/>
<br/>
現在時間 <span ng-bind="indexCtrl.now | date:'yyyy-MM/dd HH_mm:ss.sss'"></span><input type="button" value="更新" ng-click="indexCtrl.updateNow()"/>
<br/>
<span ng-bind="indexCtrl.unsafeString | escape"></span>
</body>
</html>